{
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/server.js" },
      { "src": "/manifest.json", "dest": "/client/build/manifest.json" },
      { "src": "/(.*)", "dest": "client/build/$1" }
    ]
  }